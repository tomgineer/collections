{
    "name": "collections",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev": "npx npm-run-all --parallel dev:css dev:js",
        "dev:css": "npx @tailwindcss/cli -i ./tailwind-input.css -o ./app/css/tailwind.css --watch",
        "dev:js": "esbuild app/js/src/*.js --bundle --outdir=app/js --entry-names=[name]-dist --watch",
        "build": "npx npm-run-all build:css build:js",
        "build:css": "npx @tailwindcss/cli -i ./tailwind-input.css -o ./app/css/tailwind.css --minify",
        "build:js": "esbuild app/js/src/*.js --bundle --minify --outdir=app/js --entry-names=[name]-dist"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@tailwindcss/cli": "^4.1.17",
        "daisyui": "^5.5.5",
        "tailwindcss": "^4.1.17"
    },
    "devDependencies": {
        "esbuild": "^0.27.2",
        "npm-run-all": "^4.1.5"
    }
}
